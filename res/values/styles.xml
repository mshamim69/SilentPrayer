<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

    </style>

    <style name="SingleElementStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MarginedSingleElementStyle" parent="SingleElementStyle">
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MultipleElementStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MarginedMultipleElementStyle" parent="MultipleElementStyle">
        <item name="android:layout_marginLeft">35dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SilentPrayerButtonStyle">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">#999966</item>
        <item name="android:textColor">#990000</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>